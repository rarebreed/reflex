    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Flow Program",
            "program": "${file}",
            "sourceMaps": true,
            "preLaunchTask": "flow-src",
            "outFiles": [
                "${workspaceRoot}/build/lib/src/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Flow Scripts",
            "program": "${file}",
            "sourceMaps": true,
            "preLaunchTask": "flow-scripts",
            "outFiles": [
                "${workspaceRoot}/build/lib/src/**/*.js"
            ]
        }
    ]
}